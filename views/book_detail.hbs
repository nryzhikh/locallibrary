<h1>Title: {{book.title}}</h1>

<p><strong>Author:</strong>
    <a href="{{book.author.name}}">{{book.author.name}}</a>
</p>
<p><strong>Summary:</strong> {{book.summary}}</p>
<p><strong>ISBN:</strong> {{book.isbn}}</p>
<p><strong>Genre:</strong>
    {{#each book.genre}}
    <a href="{{this.url}}">{{this.name}}</a>
    {{else}}
    undefined
    {{/each}}
</p>

<div style="margin-left:20px; margin-top:20px">
    <h4>Copies</h4>

    {{#unless book_instances}}
    <p>There are no copies of this book in the library.</p>
    {{else}}
    {{#each book_instances}}
    <hr>
    {{#if (eq this.status 'Available')}}
    <p class="text-success">{{this.status}}</p>
    {{else}}
    {{#if (eq this.status 'Maintenance')}}
    <p class="text-danger">{{this.status}}</p>
    {{else}}
    <p class="text-warning">{{this.status}}</p>
    {{/if}}
    {{/if}}
    <p><strong>Imprint:</strong> {{this.imprint}}</p>
    {{#unless (eq this.status 'Available')}}
    <p><strong>Due back:</strong> {{this.due_back}}</p>
    {{/unless}}
    <p><strong>Id:</strong>
        <a href="{{this.url}}">{{this._id}}</a>
    </p>
    {{/each}}
    {{/unless}}
</div>

<hr>
<p>
    <a href="{{book.url}}/delete">Delete Book</a>
</p>
<p>
    <a href="{{book.url}}/update">Update Book</a>
</p>