<h1>{{title}}: {{genre.name}}</h1>

{{#if genre_books.length}}

  <p class="text-danger"><strong>Delete the following books before attempting to delete this genre.</strong></p>

  <div style="margin-left:20px; margin-top:20px">
    <h4>Books</h4>
    <dl>
      {{#each genre_books}}
        <dt>
          <a href="{{this.url}}">{{this.title}}</a>
        </dt>
        <dd>{{this.summary}}</dd>
      {{/each}}
    </dl>
  </div>

{{else}}

  <p>Do you really want to delete this Genre?</p>

  <form method="POST" action="">
    <div class="form-group">
      <input id="genreid" class="form-control" type="hidden" name="genreid" required="true" value="{{genre._id}}">
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
  </form>

{{/if}}