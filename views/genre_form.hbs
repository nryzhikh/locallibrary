<h1>{{title}}</h1>

<form method="POST" action="">
    <div class="form-group">
        <label for="name">Genre Name:</label>
        <input type="text" class="form-control" name="name" placeholder="Fantasy"
            value="{{#if genre}}{{genre.name}}{{else}}{{/if}}" required="true">
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>

{{#if errors}}
<ul>
    {{#each errors}}
    <li>{{this.msg}}</li>
    {{/each}}
</ul>
{{/if}}